<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadeScrollbars="true"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#97D633"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dip" >

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:background="@drawable/detail_pic_bg"
                        android:gravity="center" >

                        <com.htx.search.DetialGallery
                            android:id="@+id/detail_gallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dip"
                    android:layout_marginRight="13dip"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="宝贝名称："
                        android:textColor="#333" >
                    </TextView>

                    <TextView
                        android:id="@+id/detail_titlee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="宝贝："
                        android:textColor="#28A5FF"
                        android:textSize="16dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/detail_layout_shape"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="5dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="最高价："
                            android:textColor="#000" >
                        </TextView>

                        <TextView
                            android:id="@+id/detail_lowprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="查找中"
                            android:textColor="#FF4D00" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="5dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="最低价："
                            android:textColor="#000" >
                        </TextView>

                        <TextView
                            android:id="@+id/detail_highprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="查找中"
                            android:textColor="#FF4D00" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/detail_shops"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="0家"
                            android:textColor="#FF4D00" >
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="有售"
                            android:textColor="#000" >
                        </TextView>

                        <TextView
                            android:id="@+id/detail_receives"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:text="0人"
                            android:textColor="#FF4D00" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:background="@drawable/detail_title_bg"
                    android:gravity="center"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="商家报价"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#000" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/detail_shops_layout"
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:divider="#999"
            android:dividerHeight="1dip" />

        <LinearLayout
            android:id="@+id/foot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tiao"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingTop="20dp" >

                <LinearLayout
                    android:id="@+id/detail_bt_fx"
                    android:layout_width="97dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/bt_red"
                    android:gravity="center" >

                    <TextView
                        style="@style/theme_fontcolor_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享"
                        android:textSize="15sp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detail_bt_sc"
                    android:layout_width="97dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/bt_red"
                    android:gravity="center" >

                    <TextView
                        style="@style/theme_fontcolor_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:textSize="15sp" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>