<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingBottom="18dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp" >

    <Button
        android:id="@+id/poiprepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/poipre_bg"
        android:text=" 上一页 "
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:paddingRight="6dip"
        android:paddingLeft="6dip"
        android:textColor="#fff"
        android:drawableLeft="@drawable/poipre_left"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/poicurpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center"
        android:text="第1页"
        android:textColor="#EC795D"
        android:textSize="20sp" />

    <Button
        android:id="@+id/poinextpage"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/poipre_bg"
        android:text="下一页  "
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:paddingRight="6dip"
        android:paddingLeft="6dip"
        android:textColor="#fff"
        android:drawableRight="@drawable/poipre_ri"
        android:textSize="14sp" />

</LinearLayout>