<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toplayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="clip_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="46dip"
        android:background="#fff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="权益中心"
            android:textColor="#5c5c5b"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"
        android:background="#bbb" />
    
    
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#eee"
            android:orientation="vertical"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#bbb"
                android:orientation="vertical"
                android:paddingBottom="0.2dip"
                android:paddingTop="0.2dip" >

                <LinearLayout
                    android:id="@+id/zhongxin_qianming"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="15dip"
                    android:paddingTop="15dip" >

                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/u_about" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:text="个人资料"
                        android:textColor="#777"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="8dip"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jt_you" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dip"
                    android:background="#bbb" />

                <LinearLayout
                    android:id="@+id/zhongxin_dizhi"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="15dip"
                    android:paddingTop="10dip" >

                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/u_add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:text="我的订单"
                        android:textColor="#777"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="8dip"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jt_you" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="#bbb"
                android:orientation="vertical"
                android:paddingBottom="0.2dip"
                android:paddingTop="0.2dip" >

                <LinearLayout
                    android:id="@+id/zhongxin_fenxiang"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="15dip"
                    android:paddingTop="15dip" >

                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/u_hezuo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:text="我的购物车"
                        android:textColor="#777"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="8dip"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jt_you" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dip"
                    android:visibility="gone"
                    android:background="#bbb" />

                <LinearLayout
                    android:id="@+id/zhongxin_gengxin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="15dip"
                    android:visibility="gone"
                    android:paddingTop="10dip" >

                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/u_update" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:text="收货地址"
                        android:textColor="#777"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="8dip"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jt_you" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dip"
                    android:background="#bbb" />

                <LinearLayout
                    android:id="@+id/zhongxin_about"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="15dip"
                    android:paddingTop="10dip" >

                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/u_fenxiang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_weight="1"
                        android:text="我要分享"
                        android:textColor="#777"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="8dip"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jt_you" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>