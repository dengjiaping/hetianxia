<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toplayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f1e6"
    android:gravity="clip_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/search_title_bg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="详情"
            android:textColor="#FFFFFF"
            android:textSize="20dip" />

        <Button
            android:id="@+id/button2"
            android:layout_width="60dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/btn"
            android:text="返回 "
            android:textColor="#fff"
            android:textSize="15dip" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/info_view_slv"
        android:layout_width="fill_parent"
         android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout" >

        <LinearLayout
            android:id="@+id/progressBar_ll00"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dip" >

            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/info_up"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip" >


            <TextView
                android:id="@+id/info_tv_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:singleLine="true"
            android:text="商家名称"
            android:textColor="#fc6c3d"
            android:textSize="17sp" />


            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <ImageView
               	android:id="@+id/info_img"
            android:layout_width="120dip"
            android:layout_height="100dip"
            android:background="@drawable/hetianxia" />


            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dip" >


            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <RatingBar
            android:id="@+id/poirating"
            style="@style/roomRatingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="15dip"
            android:rating="5"
             />


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dip"
            android:text="来自合天下"
            android:textColor="#555"
            android:textSize="13sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/info_tv_zf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="7dip"
            android:paddingTop="7dip"
            android:text="享受直返25%"
            android:textColor="#555"
            android:textSize="13sp" />


            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务: 5"
            android:textColor="#555"
            android:textSize="13sp" />


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:text="环境: 5"
            android:textColor="#555"
            android:textSize="13sp" />


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:text="综合: 5"
            android:textColor="#555"
            android:textSize="13sp" />
            </LinearLayout>
            </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/info_tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="10dip"
            android:text="地址：郑州市文化路9号永和国际902室"
            android:textColor="#666"
            android:textSize="13dip" />
            </LinearLayout>


            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/info_down"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="8dip" >


            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:gravity="center" >


            <TextView
                android:id="@+id/info_tv_walkdh"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/info_bu"
            android:gravity="bottom"
            android:text="步行导航"
            android:textColor="#222"
            android:textSize="14sp" />
            </LinearLayout>


            <View
            android:layout_width="0.6dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dip"
            android:background="#CCC" />


            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:gravity="center" >


            <TextView
                android:id="@+id/info_tv_cardh"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/info_car"
            android:gravity="bottom"
            android:text=" 车载导航"
            android:textColor="#222"
            android:textSize="14sp" />
            </LinearLayout>


            <View
            android:layout_width="0.6dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dip"
            android:background="#CCC" />


            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:gravity="center" >


            <TextView
                android:id="@+id/info_tv_busdh"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/info_bus"
            android:gravity="bottom"
            android:text=" 公交导航"
            android:textColor="#222"
            android:textSize="14sp" />
            </LinearLayout>
            </LinearLayout>


            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/info_phone_bg"
            android:gravity="center"
            android:padding="10dip" >


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="商家电话："
            android:textColor="#327f14"
            android:textSize="18dip" />


            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/info_phone" />


            <TextView
                android:id="@+id/info_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="0371-55887524"
            android:textColor="#327f14"
            android:textSize="18dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_upd"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="10dip"
                    android:text="商户简介"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_downd"
                    android:orientation="vertical"
                    android:paddingBottom="13dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="10dip" >

                    <TextView
                        android:id="@+id/info_view_tvcontent"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="商户内容简介"
                        android:textColor="#888"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/info_tv_morecontent"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingTop="8dip"
                        android:text="查看更多 >>"
                        android:textColor="#555"
                        android:textSize="13sp" 
                        android:visibility="gone"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/info_ll_pl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/info_ping_bg"
                android:padding="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  消费评论"
                    android:textColor="#c2601e"
                    android:layout_weight="1"
                    android:textSize="16dip" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  >>"
                    android:textColor="#c2601e"
                    android:textSize="16dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_upd"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="10dip"
                    android:text="优惠信息"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_downd"
                    android:orientation="vertical"
                    android:paddingBottom="10dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="8dip" >

                    <TextView
                        android:id="@+id/info_tvyouhui"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="优惠信息"
                        android:lines="3"
                        android:textColor="#888"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/info_tv_moreyouhui"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingTop="8dip"
                        android:text="查看更多 >>"
                        android:visibility="gone"
                        android:textColor="#555"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
            
           		 <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="vertical" >
                	<Button
                    android:id="@+id/info_btn_gz"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="20dip"
                    android:layout_marginBottom="30dip"
                    android:background="@drawable/bt_bg1"
                    android:text="关注"
                    android:textColor="#fff"
                    android:textSize="17sp" />
                </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/info_dibu"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/info_tv_fankui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  意见反馈"
                android:drawableLeft="@drawable/info_ico1"
                android:textColor="#444"
                android:textSize="16dip" />
        </LinearLayout>

        <View
            android:layout_width="0.6dip"
            android:layout_height="fill_parent"
            android:background="#BBB" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/info_tv_jiucuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/info_ico2"
                android:textColor="#444"
                android:text="  信息纠错"
                android:textSize="16dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>