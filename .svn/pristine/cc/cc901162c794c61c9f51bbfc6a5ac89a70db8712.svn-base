<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/search_title_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="38dp" >

        <Button
            android:id="@+id/barcode_information_goback"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:gravity="center"
            android:scaleType="fitXY"
            android:text="返回"
            android:textSize="15sp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="二维码扫描"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="30dip"
                android:background="@drawable/search_pic_bg"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/barcodeimg"
                    android:layout_width="250dip"
                    android:layout_height="150dip"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:background="@drawable/hetianxiaa" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/barcodestatus"
                    android:textColor="#ff0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="扫描成功，结果如下" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="#e2e2e2" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#fbfbfb" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:background="#f0f0f0"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dip" >

                <LinearLayout
                    android:id="@+id/productnamell"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="商品名称:  "
                        android:textColor="#1d90cb" />

                    <TextView
                        android:id="@+id/productname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="查找中"
                        android:textColor="#7e7e7e" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/producerll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="制  造  商:  "
                        android:textColor="#1d90cb" />

                    <TextView
                        android:id="@+id/producer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="查找中"
                        android:textColor="#7e7e7e" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/locationll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="产品地区:  "
                        android:textColor="#1d90cb" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="查找中"
                        android:textColor="#7e7e7e" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/referencepricell"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="参考价格:  "
                        android:textColor="#1d90cb" />

                    <TextView
                        android:id="@+id/referenceprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="查找中"
                        android:textColor="#7e7e7e" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/barcodestrll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="3dip" >

                    <TextView
                        android:id="@+id/barcodestr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:autoLink="web"
                        android:text="查找中"
                        android:textColor="#7e7e7e" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#fbfbfb" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#e2e2e2" />

            <Button
                android:id="@+id/price_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:layout_gravity="center"
                android:background="@drawable/bgbg"
                android:text="搜索价格信息"
                android:visibility="gone"
                android:textColor="#1d90cb" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>